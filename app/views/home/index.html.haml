#underlay

  #nav
    = render 'layouts/nav'
    .logo= 'LUNCH TRACKR'

  #rest_form

  .row
    .large-6.columns
      #search_input
        = text_field_tag :search, nil, :autofocus => true, :placeholder => 'Search Restaurants'

  .row
    .large-8.columns
      #restaurants
        = render :partial => 'restaurants/index'
    .large-4.columns
      #map_canvas
        %script
          app.display_map(40.7316, -73.9901, 13)
      = render :partial => 'tags/tag_key'

- @restaurants.each do |restaurant|
  %script
    = "app.add_marker('#{restaurant.lat}', '#{restaurant.long}', 'title')"
    / - if @auth.present?
    /   = "app.add_user_marker('#{@auth.lat}', '#{@auth.long}')"